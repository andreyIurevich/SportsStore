@model SportsStore.Domain.Entities.Cart

@Html.ActionLink("Перейти в карзину", "Index", "Cart", new { returnUrl = Request.Url.PathAndQuery }, new { @class = "btn btn-default navbar-btn pull-right" })

<p class="navbar-text">
    <b>Your cart:</b>
    @Model.Lines.Sum(x => x.Quantity) item(s),
    @Model.ComputeTotalValue().ToString("c")
</p>





